                },
                {
                    "name": "heroStyle",
                    "label": "Hero Style",
                    "description": "Visual style for the hero section",
                    "type": "select",
                    "typeOptions": {
                        "validValues": [
                            {"label": "Standard", "value": "standard"},
                            {"label": "With Overlay", "value": "overlay"}
                        ]
                    },
                    "defaultValue": "overlay"
                }
            ]
        },
        {
            "label": "Call-to-Action Buttons",
