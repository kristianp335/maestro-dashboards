{
    "fieldSets": [
        {
            "fields": [
                {
                    "name": "heroTitle",
                    "label": "Hero Title",
                    "description": "Main headline for the hero section",
                    "type": "text",
                    "defaultValue": "Maestro GFD Cockpit"
                },
                {
                    "name": "heroDescription", 
                    "label": "Hero Description",
                    "description": "Descriptive text below the title",
                    "type": "text",
