                    "description": "Display call-to-action buttons",
                    "type": "checkbox",
                    "defaultValue": true
                },
                {
                    "name": "primaryCTAText",
                    "label": "Primary Button Text",
                    "description": "Text for the primary action button",
                    "type": "text", 
                    "defaultValue": "View Dashboard"
                },
                {
                    "name": "showSecondaryCTA",
                    "label": "Show Secondary CTA",
                    "description": "Display secondary action button",
                    "type": "checkbox",
                    "defaultValue": true
                },
                {
                    "name": "secondaryCTAText",
                    "label": "Secondary Button Text",
                    "description": "Text for the secondary action button",
                    "type": "text",
                    "defaultValue": "Learn More"
                }
            ]
        },
        {
            "label": "KPI Preview",
            "fields": [
                {
                    "name": "showKPIPreview",
                    "label": "Show KPI Preview",
                    "description": "Display key performance indicators",
                    "type": "checkbox", 
                    "defaultValue": true
                }
            ]
        }
    ]
